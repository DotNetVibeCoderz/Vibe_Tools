<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="150"
        Width="450" Height="150"
        x:Class="Compressor.Views.ExtractDialog"
        Title="Extract"
        WindowStartupLocation="CenterOwner">
  <Grid RowDefinitions="Auto, *, Auto" Margin="20">
    <StackPanel Grid.Row="0" Spacing="5">
      <TextBlock Text="Destination Folder:"/>
      <TextBox Name="PathBox"/>
    </StackPanel>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
      <Button Click="OnExtractClick" Classes="accent">Extract</Button>
      <Button Click="OnCancelClick">Cancel</Button>
    </StackPanel>
  </Grid>
</Window>