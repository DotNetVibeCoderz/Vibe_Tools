<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="160"
        Width="400" Height="160"
        x:Class="Compressor.Views.RenameDialog"
        Title="Rename"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <StackPanel Margin="20" Spacing="15">
        <TextBlock Text="Enter new name:" />
        <TextBox Name="NameTextBox" />
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="OK" Width="80" Click="Ok_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>