<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="Img2Ascii.MainWindow"
        Title="Img2Ascii - By Jacky the Code Bender"
        Width="1000" Height="700"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="Default"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent">

    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <Grid ColumnDefinitions="300, *" Margin="20">
            <!-- Sidebar Controls -->
            <StackPanel Grid.Column="0" Spacing="15" Margin="0,30,15,0">
                <TextBlock Text="IMAGE TO ASCII" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Convert your images to text art instantly." TextWrapping="Wrap" Foreground="Gray"/>
                
                <Separator Background="#444" Height="1" Margin="0,10"/>

                <Button Name="BrowseButton" Content="ðŸ“‚ Load Image" HorizontalAlignment="Stretch" 
                        Background="#3a3a3a" Foreground="White" BorderThickness="0" CornerRadius="5"/>

                <TextBlock Text="Resolution (Width)" FontWeight="SemiBold" Margin="0,10,0,0"/>
                <Grid ColumnDefinitions="*, Auto">
                    <Slider Name="ResolutionSlider" Minimum="20" Maximum="300" Value="100" Grid.Column="0"/>
                    <TextBlock Name="ResolutionText" Text="{Binding #ResolutionSlider.Value, StringFormat={}{0:0}}" 
                               Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0" Width="30"/>
                </Grid>

                <TextBlock Text="Character Set" FontWeight="SemiBold" Margin="0,10,0,0"/>
                <ComboBox Name="CharacterSetCombo" SelectedIndex="0" HorizontalAlignment="Stretch">
                    <ComboBoxItem Content="Standard (@%#*+=-:. )"/>
                    <ComboBoxItem Content="Complex ($@B%8&amp;WM#*oahkbdpqwmZO0QLCJUYXzcvunxrjft/\|()1{}[]?-_+~&lt;&gt;i!lI;:,&quot;^`'. )"/>
                    <ComboBoxItem Content="Minimal (#@. )"/>
                </ComboBox>

                <CheckBox Name="InvertCheck" Content="Invert Colors"/>

                <Button Name="ExportButton" Content="ðŸ’¾ Export to Text File" HorizontalAlignment="Stretch" 
                        Background="#007ACC" Foreground="White" BorderThickness="0" CornerRadius="5" Margin="0,20,0,0"/>
                
                <TextBlock Text="Status:" Margin="0,20,0,0" Foreground="Gray"/>
                <TextBlock Name="StatusText" Text="Ready." Foreground="LightGreen" TextWrapping="Wrap"/>

            </StackPanel>

            <!-- Output Preview -->
            <Border Grid.Column="1" Background="#1e1e1e" CornerRadius="8" Margin="0,30,0,0" Padding="10">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <TextBlock Name="OutputText" Text="" 
                               FontFamily="Cascadia Code, Consolas, Courier New, Monospace" 
                               FontSize="8" Foreground="White" TextWrapping="NoWrap"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </Panel>
</Window>