<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ObjectCounter.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ObjectCounter.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon=""
        Title="Object Counter - Jacky The Code Bender">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="200,*">
        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#2D2D30" Padding="10">
            <StackPanel Spacing="10">
                <TextBlock Text="Object Counter" FontWeight="Bold" FontSize="18" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                
                <Button Content="Source Input" Command="{Binding ShowSourceCommand}" HorizontalAlignment="Stretch"/>
                <Button Content="Statistics" Command="{Binding ShowStatsCommand}" HorizontalAlignment="Stretch"/>
                <Button Content="About" Command="{Binding ShowAboutCommand}" HorizontalAlignment="Stretch"/>
                <Button Content="Reset" Command="{Binding ResetCommand}" HorizontalAlignment="Stretch" Background="#C62828"/>
                
                <TextBlock Text="Total Count:" Foreground="White" Margin="0,20,0,0"/>
                <TextBlock Text="{Binding TotalCount}" FontSize="24" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                
                <TextBlock Text="FPS:" Foreground="Gray" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding Fps}" FontSize="16" Foreground="Gray" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Border Grid.Column="1" Background="#1E1E1E" Padding="20">
            <ContentControl Content="{Binding CurrentView}"/>
        </Border>
    </Grid>

</Window>
